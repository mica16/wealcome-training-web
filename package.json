{
  "name": "wealcome-training-web",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npm run clean-dist && webpack -p --config=config/webpack/prod.js",
    "clean-dist": "rm -f -r -d dist",
    "lint": "tslint './src/**/*.ts*' --format stylish --force",
    "start": "npm run start-dev",
    "build-dev": "npm run clean-dist && npm run webpack -- --config config/webpack/dev.js --progress --profile",
    "start-dev": "webpack-dev-server --config=config/webpack/dev.js",
    "start-prod": "npm run build && node express.js",
    "test": "jest --coverage --config=config/jest.all.js --runInBand",
    "unit-test-watch": "npm run unit-test -- --watch",
    "integ-test-watch": "npm run integ-test -- --watch",
    "unit-test": "jest --coverage --config=config/jest.unit.js",
    "integ-test": "jest --coverage --config=config/jest.integ.js --runInBand",
    "webpack": "node --max_old_space_size=4096 node_modules/webpack/bin/webpack.js"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.2.3",
